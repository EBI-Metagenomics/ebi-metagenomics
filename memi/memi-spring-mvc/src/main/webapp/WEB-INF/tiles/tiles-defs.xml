<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <!-- Default main template -->
    <definition name="rootTemplate" template="/templates/rootTemplate.jsp">
        <!-- Attributes of type string-->
        <put-attribute name="pageTitle" type="template" value="/templates/pageTitle.jsp"/>
        <put-attribute name="bodyClass" type="string" value="grey"/>
        <!-- Default value if not overridden -->
        <!-- Attributes of type template-->
        <put-attribute name="header" type="template" value="/templates/header.jsp"/>
        <put-attribute name="breadcrumbs" type="template" value="/templates/breadcrumbs.jsp"/>
        <put-attribute name="mainMenu" type="template" value="/templates/mainMenu.jsp"/>
        <put-attribute name="footer" type="template" value="/templates/footer.jsp"/>
    </definition>

    <!-- Page bodies-->

    <definition name="home" extends="rootTemplate">
        <!-- Attributes of type definition-->
        <put-attribute name="bodyClass" type="string" value="grey"/>
        <put-attribute name="body" type="definition" value="homeDef"/>
    </definition>

    <definition name="homeDef" template="/templates/homeBody.jsp">
        <put-attribute name="loginForm" type="template" value="/templates/loginForm.jsp"/>
    </definition>

    <definition name="info" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="green"/>
        <put-attribute name="body" value="/templates/infoBody.jsp"/>
    </definition>

    <definition name="submit" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="ebigrey"/>
        <put-attribute name="body" value="/templates/submitBody.jsp"/>
    </definition>

    <definition name="submitSuccess" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="ebigrey"/>
        <put-attribute name="body" value="/templates/submitSuccessBody.jsp"/>
    </definition>

    <definition name="installationSite" extends="rootTemplate">
        <put-attribute name="body" value="/templates/installationSiteBody.jsp"/>
    </definition>

    <definition name="viewStudies" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="blue"/>
        <put-attribute name="body" value="/templates/viewStudiesBody.jsp"/>
    </definition>

    <definition name="viewSamples" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="greyblue"/>
        <put-attribute name="body" value="/templates/viewSamplesBody.jsp"/>
    </definition>

    <definition name="studyView" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="blue"/>
        <put-attribute name="body" value="/templates/studyViewBody.jsp"/>
    </definition>

    <definition name="sampleView" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="greyblue"/>
        <put-attribute name="body" value="/templates/sampleViewBody.jsp"/>
    </definition>

    <definition name="help" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="orange"/>
        <put-attribute name="body" value="/templates/helpBody.jsp"/>
    </definition>

    <definition name="contact" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="ebigreen"/>
        <put-attribute name="body" value="/templates/contactBody.jsp"/>
    </definition>

    <definition name="contactSuccess" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="ebigreen"/>
        <put-attribute name="body" value="/templates/contactSuccessBody.jsp"/>
    </definition>

    <definition name="login" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="ebigrey"/>
        <put-attribute name="body" value="/templates/loginBody.jsp"/>
    </definition>

    <definition name="404" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="grey"/>
        <put-attribute name="body" value="/templates/errors/404Body.jsp"/>
    </definition>

    <definition name="exception" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="grey"/>
        <put-attribute name="body" value="/templates/errors/exceptionBody.jsp"/>
    </definition>

    <definition name="analysisStatsView" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="greyBlue"/>
        <put-attribute name="body" value="/templates/analysisStatsBody.jsp"/>
    </definition>

    <definition name="lostInSpace" extends="rootTemplate">
        <put-attribute name="bodyClass" type="string" value="grey"/>
        <put-attribute name="body" value="/templates/lostInSpaceBody.jsp"/>
    </definition>

</tiles-definitions>
