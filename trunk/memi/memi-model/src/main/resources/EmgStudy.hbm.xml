<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="uk.ac.ebi.interpro.metagenomics.memi.model.EmgStudy" table="EMG_STUDY" schema="EMG_USER">

        <id name="studyId" column="STUDY_ID">
            <generator class="native"/>
        </id>

        <property name="ncbiProject">
            <column name="NCBI_PROJECT" sql-type="varchar2" length="30"/>
        </property>
        <property name="studyName">
            <column name="STUDY_NAME" sql-type="varchar2" length="100"/>
        </property>
        <property name="submitterId">
            <column name="SUBMITTER_ID" sql-type="varchar2" length="30"/>
        </property>
        <property name="submitterName">
            <column name="SUBMITTER_NAME" sql-type="varchar2" length="30"/>
        </property>
        <property name="centreName">
            <column name="CENTRE_NAME" sql-type="varchar2" length="100"/>
        </property>
        <property name="studyType">
            <column name="STUDY_TYPE" sql-type="varchar2" length="30"/>
        </property>
        <property name="associatedPublications">
            <column name="ASSOCIATED_PUBLICATIONS" sql-type="varchar2"/>
        </property>
        <property name="studyAbstract">
            <column name="STUDY_ABSTRACT" sql-type="clob" length="4000"/>
        </property>
        <property name="experimentalFactor">
            <column name="EXPERIMENTAL_FACTOR" sql-type="varchar2" length="30"/>
        </property>
        <property name="numberSamples">
            <column name="NUMBER_SAMPLES" sql-type="varchar2" length="30"/>
        </property>
        <property name="numberOfSamplesUsed">
            <column name="NUMBER_OF_SAMPLES_USED" sql-type="number" length="22"/>
        </property>
        <property name="publicReleaseDate">
            <column name="PUBLIC_RELEASE_DATE" sql-type="date" length="7"/>
        </property>
        <property name="studyContactName">
            <column name="STUDY_CONTACT_NAME" sql-type="varchar2" length="30"/>
        </property>
        <property name="studyContactEmail">
            <column name="STUDY_CONTACT_EMAIL" sql-type="varchar2" length="30"/>
        </property>
    </class>
</hibernate-mapping>