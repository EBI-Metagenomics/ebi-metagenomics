    <!--</error-page>-->

    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>

    <!--This mapping makes the favicon works on Tomcat-->
    <mime-mapping>
        <extension>ico</extension>
        <mime-type>image/x-icon</mime-type>
