<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="submitterDAOTestId" name="submitterDAOTest" class="uk.ac.ebi.interpro.metagenomics.memi.dao.apro.SubmitterDAOImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jcp.jdbc.oracle.driverClassName}"/>
        <property name="url" value="${jcp.jdbc.oracle.adev.url}"/>
        <property name="username" value="${jcp.jdbc.oracle.adev.username}"/>
        <property name="password" value="${jcp.jdbc.oracle.adev.password}"/>
    </bean>
</beans>