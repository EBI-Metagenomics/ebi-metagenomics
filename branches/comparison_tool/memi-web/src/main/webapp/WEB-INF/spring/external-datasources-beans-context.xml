<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <!--External data sources-->

    <!--data source APRO-->
    <bean id="aproDataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@drambuie.ebi.ac.uk:1551:APRO"/>
        <property name="username" value="spin2006read"/>
        <property name="password" value="spin2006read"/>
    </bean>

    <!--data source ERAPRO-->
    <bean id="eraProDataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@ora-vm-009.ebi.ac.uk:1541:ERAPRO"/>
        <property name="username" value="era_reader"/>
        <property name="password" value="reader"/>
    </bean>
</beans>