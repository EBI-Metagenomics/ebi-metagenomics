<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <!--Services-->

    <!-- The next 3 beans belong to the email notification service which is currently used in the submission form  -->
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="smtp.ebi.ac.uk"/>
        <property name="port" value="25"/>
    </bean>

    <!--Email service for CustomizedExceptionResolver-->
    <bean name="emailNotificationServiceExceptionResolver"
          class="uk.ac.ebi.interpro.metagenomics.memi.services.EmailNotificationService">
        <constructor-arg ref="mailSender"/>
        <property name="receiver" value="fbuccini@ebi.ac.uk"/>
        <property name="sender" value="mg-portal-fbuccini@ebi.ac.uk"/>
        <property name="emailSubject" value="DEVELOPERS [MG portal] Exception occurred"/>
    </bean>

    <!--Email service for the SRARegistration form  -->
    <bean name="emailNotificationServiceSRARegistration"
          class="uk.ac.ebi.interpro.metagenomics.memi.services.EmailNotificationService">
        <constructor-arg ref="mailSender"/>
        <property name="receiver" value="${emailService.sraRegistration.receiver}"/>
        <property name="receiverCCList">
            <list>
                <value type="java.lang.String">fbuccini@ebi.ac.uk</value>
                <value type="java.lang.String">fbuccini@ebi.ac.uk</value>
                <value type="java.lang.String">fbuccini@ebi.ac.uk</value>
                <value type="java.lang.String">fbuccini@ebi.ac.uk</value>
            </list>
        </property>
        <property name="emailSubject" value="New SRA account request from the MGPortal"/>
    </bean>

    <!--Email service for the feedback form-->
    <bean name="emailNotificationServiceFeedbackPage"
          class="uk.ac.ebi.interpro.metagenomics.memi.services.EmailNotificationService">
        <constructor-arg ref="mailSender"/>
        <property name="receiver" value="beta-ebi-metagenomics-feedback@googlegroups.com"/>
    </bean>

    <!-- Default email notification service without any specific properties-->
    <bean name="defaultEmailNotificationService"
          class="uk.ac.ebi.interpro.metagenomics.memi.services.EmailNotificationService">
        <constructor-arg ref="mailSender"/>
    </bean>

    <!--This service configures a HTTP response, which opens a download dialog-->
    <bean id="downloadService" class="uk.ac.ebi.interpro.metagenomics.memi.services.MemiDownloadService"/>

    <bean id="authenticationClientTomcat9" name="authenticationClientTomcat9" class="uk.ac.ebi.ena.account.admin.client.AuthenticationClientImpl">
        <constructor-arg ref="enaWebServiceUrlTomcat9"/>
    </bean>

    <bean id="authenticationClientTomcat10" name="authenticationClientTomcat10" class="uk.ac.ebi.ena.account.admin.client.AuthenticationClientImpl">
        <constructor-arg ref="enaWebServiceUrlTomcat10"/>
    </bean>

    <bean id="enaWebServiceUrlTomcat9" class="java.lang.String">
        <constructor-arg value="http://tomcat-9.ebi.ac.uk:21560/ena/account/admin/"/>
    </bean>

    <bean id="enaWebServiceUrlTomcat10" class="java.lang.String">
        <constructor-arg value="http://tomcat-10.ebi.ac.uk:21560/ena/account/admin/"/>
    </bean>

    <bean id="authenticationService" class="uk.ac.ebi.interpro.metagenomics.memi.authentication.AuthenticationService"/>


</beans>