<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="file-definitions-context.xml"/>

    <bean name="sequenceFileDefinitions" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="maskedReadsFile"/>
                <ref bean="pCDSFile"/>
                <ref bean="readsWithMatchesFile"/>
                <ref bean="readsWithoutMatchesFile"/>
            </list>
        </constructor-arg>
    </bean>

    <bean name="functionalAnalysisFileDefinitions" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="interProScanMatchesFile"/>
                <ref bean="goSlimAnnotationFile"/>
            </list>
        </constructor-arg>
    </bean>

    <bean name="taxonomicAnalysisFileDefinitions" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="kingdomCountsFile"/>
                <ref bean="kronaHtmlFile"/>
            </list>
        </constructor-arg>
    </bean>


</beans>